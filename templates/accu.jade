extends _framework


block head

block body
  != page.html
  each post in widx.embed(page.parent)
    if (post != page)
      .embed-article
        .head
          h2.title
            a(href=post.url)
              = post._metadata.title
          span.lmeta.date
            = post.date
        span.text
          !{post.html}
