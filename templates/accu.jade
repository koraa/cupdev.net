extends _framework


block head
  script(src='src/blog.js')

block body
  != page.html
  each post in widx.embed(page.parent)
    if (post != page)
      .article
        .head
          h2.title
            a(href=post.url)
              = post._metadata.title
          span.littlemeta
            = post.date
        span.text
          = post._content
