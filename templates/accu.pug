extends _framework
include _lib

block head

block body
  != page.html
  each post in widx.embed(page.parent)
    if (post != page)
      .article-wrap
        .article.embed-article
          h2.title
            a(href=post.url)
              = post.title
          span.text
            if (post.metadata.blurb)
              | !{post.metadata.blurb}
              |    
              a(href=post.url) Read the post.
            else
              | !{post.html}

          include comments/comments-overview
